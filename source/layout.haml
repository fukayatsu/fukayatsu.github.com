%html
  %head
    %meta{charset: "utf-8"}
    %meta{content: "IE=edge;chrome=1", "http-equiv" => "X-UA-Compatible"}
    %link{href: "/stylesheets/all.css?1384954982", media: "all", rel: "stylesheet", type:"text/css"}
  %link{href: "/images/favicon.ico", rel: "icon", type: "image/ico"}
    %title
      - if current_article.try(:title)
        #{current_article.title} - fukayatsu.dev
      - else
        fukayatsu.dev
  %body
    .content
      %header
        .header-inner
          .header-image
            = link_to '/' do
              %img{ src: '/images/fukayatsu.jpg' }
          = link_to '/' do
            .header-text
              %h1.header-title
                fukayatsu.dev
              %p.header-description
                under development
      - if current_article.try(:date)
        .publish-date
          = link_to current_article.date, current_article
      - if current_article.try(:tags)
        .tags
          - current_article.tags.each do |tag|
            = link_to tag, tag_path(tag)
      #main{role: "main"}
        - if current_article.try(:title)
          %h1.title= current_article.try(:title)
        = yield
